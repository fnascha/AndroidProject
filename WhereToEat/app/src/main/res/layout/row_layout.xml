<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    tools:context=".adapter.MyAdapter"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/RestaurantPic"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/RestaurantName_txt"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Restaurant Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RestaurantPic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CityName_txt"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="CityName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RestaurantPic"
            app:layout_constraintTop_toBottomOf="@+id/RestaurantName_txt" />

        <TextView
            android:id="@+id/RestaurantAddress_txt"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RestaurantPic"
            app:layout_constraintTop_toBottomOf="@+id/CityName_txt" />

        <TextView
            android:id="@+id/RestaurantPhone_txt"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="PhoneNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/RestaurantPic"
            app:layout_constraintTop_toBottomOf="@+id/RestaurantAddress_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>